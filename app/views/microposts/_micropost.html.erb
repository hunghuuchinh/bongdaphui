
<div class="col-md-8 col-md-offset-2 micropost">
<div class="title-micropost"><%= micropost.title %>
<% if micropost.picture_micropost? %>
 <%= image_tag micropost.picture_micropost.url, class: "image-micropost"%>
 <% end %>
  <div class="micropost_information">
    <div><%= micropost.content %></div>
    <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <span style ="float: right;"><%= link_to micropost.user.name, micropost.user %></span>
  </div>
</div>
</div>

