<% provide(:title, @user.name) %>

<div class="col-md-3">
       <%= image_tag @user.picture.url %>
  <div class ="user_infomation"><span class="glyphicon glyphicon-user"></span>
  <%= @user.name %></br>
  <span class ="glyphicon glyphicon-envelope"></span>
  <%= @user.email %></br>
  <span class ="glyphicon glyphicon-phone"></span>
  <%= @user.phone %></br>
  </div>
  </div>
  <div class="col-md-6">
   <h1>Order Logs</h1>
     <% @orders.each do |order| %>
       Child_Pitch_Id : <%= order.child_pitch_id %></br>
       Order Id : <%= order.id %></br>
       Kit quantity Order : <%= order.kit %></br>
       Ball quantity Order : <%= order.ball %> </br>
       Shoes quantity Order : <%= order.shoes %></br>
       Create at :<%= order.created_at %> </br>
       Update  at : <%= order.updated_at %> </br>
       Order Status : <i style="font-weight: bold"; ><%= order.status %></i>
       </br>
       ---------------------------------------------
       </br>
     <% end %>
  </div>
</div>
