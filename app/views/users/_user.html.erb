
<table class="table table-hover">
    <thead>
      <tr>
        <th>User Name</th>
        <th>Edit User</th>
        <th>Delete User</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to user.name, user %></td>
        <td><%= link_to "edit", edit_user_path(user), :class => 'btn btn-large btn-info btn_custom'%></td>
        <td><%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" }, :class => 'btn btn-large btn-danger btn_custom_1'%></td>
      </tr>
    </tbody>
  </table>

